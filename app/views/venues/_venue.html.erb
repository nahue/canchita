<div id="<%= dom_id venue %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Name:</strong>
    <%= venue.name %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Cover:</strong>
    <%= image_tag venue.cover  if venue.cover.attached? %>
    <%= link_to venue.cover.filename, venue.cover if venue.cover.attached? %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this venue", venue, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this venue", edit_venue_path(venue), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
