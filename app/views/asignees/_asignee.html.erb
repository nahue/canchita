<div id="<%= dom_id asignee %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= asignee.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Is coach:</strong>
    <%= asignee.is_coach %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this asignee", asignee, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this asignee", edit_asignee_path(asignee), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
