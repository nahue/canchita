<div id="<%= dom_id reservation %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Name:</strong>
    <%= reservation.asignee.name %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Is coach:</strong>
    <%= reservation.asignee.is_coach %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Starts at</strong>
    <%= reservation.start_at %>
  </p>
  <% if action_name != "show" or controller_name == "venues" %>
    <%= link_to "Show this asignee", reservation.asignee, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this asignee", edit_asignee_path(reservation.asignee), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
