<div id="<%= dom_id booking %>" class="overflow-hidden rounded-xl border shadow bg-white">
  <div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
    <h3 class="text-base font-semibold leading-6 text-gray-900"><%= booking.user.name %></h3>
  </div>
  <div class="p-4 flex flex-col gap-4">
    <p class="">
      <strong class="block font-medium mb-1">Start at:</strong>
      <%= booking.start_at %>
    </p>

    <p class="">
      <strong class="block font-medium mb-1">End at:</strong>
      <%= booking.end_at %>
    </p>

    <%= link_to "Edit", edit_booking_path(booking), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
